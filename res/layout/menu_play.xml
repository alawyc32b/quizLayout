<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/plus"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_plus"
                android:text="addition"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/minus"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_kali"
                android:text="multiplication"
                android:textSize="8dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="8dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_mix"
                android:text="mix"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_tof"
                android:text="true or false"
                android:textSize="8dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_minus"
                android:text="substraction"
                android:textSize="8dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_bagi"
                android:text="division"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_multi"
                android:text="multiplication"
                android:textSize="8dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_brain"
                android:text="memory"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_xyz"
                android:text="addition\nsubstraction"
                android:textSize="8dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_divi"
                android:text="division"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_scale"
                android:text="equality"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/back"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_subdirectory_arrow_left_black_24dp"
                android:text="back"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>