<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="100dp"
                 android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_videogame_asset_black_24dp"
                android:text="play services"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_settings_black_24dp"
                android:text="settings"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/custom_button"
                android:drawableTop="@drawable/ic_apps_black_24dp"
                android:text="more apps"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/play"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:background="@drawable/custom_button"
                android:drawableStart="@drawable/ic_play_arrow_black_24dp"
                android:paddingLeft="-10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/custom_button"
                        android:drawableTop="@drawable/ic_language_black_24dp"
                        android:text="language"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:paddingLeft="0dp"
                        android:paddingTop="10dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/exit"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/custom_button"
                    android:drawableTop="@drawable/ic_exit_to_app_black_24dp"
                    android:text="exit"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>