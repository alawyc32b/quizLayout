<?xml version="1.0" encoding="UTF-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners
                android:radius="0dp" />

            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>

            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="3dp"
                android:color="#FFFFFF"/>

            <corners
                android:radius="0dp" />

            <padding
                android:left="20dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

        </shape>
    </item>

</layer-list>